datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  user_id    Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  full_name  String
  updates_at DateTime @default(now())
  created_at DateTime @default(now())
}

model polling {
  polling_id  Int      @id @default(autoincrement())
  name        String
  image_url   String
  description String
  owner_id    Int
  deadline_at DateTime @default(now())
  updated_at  DateTime @default(now())
  created_at  DateTime @default(now())
}

model option {
  option_id  Int      @id @default(autoincrement())
  polling_id Int
  name       String
  image_url  String
  owner_id   Int
  updated_at DateTime @default(now())
  created_at DateTime @default(now())
}

model category {
  category_id Int      @id @default(autoincrement())
  name        String
  owner_id    Int
  updated_at  DateTime @default(now())
  created_at  DateTime @default(now())
}

model history {
  history_id Int      @id @default(autoincrement())
  polling_id Int
  option_id  Int
  owner_id   Int
  updated_at DateTime @default(now())
  created_at DateTime @default(now())
}
