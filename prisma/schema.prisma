datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  user_id    Int       @id @default(autoincrement())
  email      String    @unique
  name       String
  created_at DateTime
}

model Polling {
  poll_id   Int       @id @default(autoincrement())
  user_id   Int
  category  String?
  title     String
  name      String?
  img       String?
  deadline  DateTime?
  createdAt DateTime

}

model Option {
  option_id      Int       @id @default(autoincrement())
  name_category  String
  name           String?
  img            String?
  createdAt      DateTime
}

model History {
  history_id  Int @id @default(autoincrement())
  user_id   Int
  option_id Int
}

model Category {
  id_category   Int     @id @default(autoincrement())
  name_category String  @unique
}
